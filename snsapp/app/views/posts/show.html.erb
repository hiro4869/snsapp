<h1>詳細画面</h1>

<p>タイトル：<%= @post.title %></p>
<p>内容：<%= @post.body %></p>
<p>ユーザーID：<%= @post.user_id %></p>



<% if current_user.id == @post.user_id %>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "Destroy", @post, method: :delete, data: {confirm: "削除しますか？" } %>
<% end %>




<p><%= link_to "Home", root_path %></p>

